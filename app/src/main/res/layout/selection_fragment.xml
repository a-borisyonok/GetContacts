<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".presentation.SelectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/choose_contact"
            style="@style/ButtonText"
            android:text="@string/choose_contact_string" />

        <Button
            android:id="@+id/show_contacts"
            style="@style/ButtonText"
            android:text="@string/show_contacts_string" />

        <Button
            android:id="@+id/show_from_sp"
            style="@style/ButtonText"
            android:text="@string/show_from_sp_string" />

        <Button
            android:id="@+id/show_notification"
            style="@style/ButtonText"
            android:text="@string/show_notification_string" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>